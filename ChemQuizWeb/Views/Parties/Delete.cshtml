    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir permanentemente essa Party?</h3>
<div>
    <h4>Party</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PartyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartyName)
