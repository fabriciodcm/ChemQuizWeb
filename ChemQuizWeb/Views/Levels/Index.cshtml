@model IEnumerable<ChemQuizWeb.Data.Level>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LevelNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LevelDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LevelLesson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LevelNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LevelDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LevelLesson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.GameId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LevelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LevelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LevelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
